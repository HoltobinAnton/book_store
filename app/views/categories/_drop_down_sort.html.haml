.dropdown.width-240
  %a.dropdown-toggle.dropdown-btn{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
    %span.drop-down-newest-first= t("#{title_sort}")
    %i.fa.fa-angle-down.dropdown-icon
  %ul.dropdown-menu
    %li
      = link_to t("a_z"),category.nil? ? get_categories("title_asc") : get_category(category, "title_asc")
    %li
      = link_to t("z_a"),category.nil? ? get_categories('title_desc') : get_category(category, "title_desc")
    %li
      = link_to t("newest_first"),category.nil? ? get_categories('new_books') : get_category(category, "new_books")
    %li
      = link_to t("price_high_to_low"),category.nil? ? get_categories('high_price') : get_category(category, "high_price")
    %li
      = link_to t("price_low_to_high"),category.nil? ? get_categories('low_price') : get_category(category, "low_price")