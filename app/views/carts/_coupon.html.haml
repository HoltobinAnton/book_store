= form_tag cart_path, method: :put, remote: true do
  .col-sm-4
    .input-group.general-input-group
      %label.input-label= t('enter_coupon')
      = text_field_tag "discount", nil, name: 'secret_code', placeholder: t('enter_code'), class: 'form-control mb-30 secret_code'
      %div
        %button.btn.btn-primary.mr-5.mb-15.visible-xs-inline-block Apply Coupon
        = submit_tag t('update_cart'), class: 'button btn btn-primary mb-15 res-block'