


%h3.in-gold-500.mb-25= t('write_review')
%ul.list-inline
  %li
    - if current_user.image.nil?
      %span.img-circle.logo-size.logo-empty
        N
    - else
      = image_tag current_user.image, class: "img-circle logo-size"
     
.col-sm-8
  = simple_form_for book.reviews.new, as: @review_form do |f|
    .form-group
      = f.hidden_field(:book_id, value: book.id)
      .form-group.row
        = f.label :rating, class: 'col-sm-1 form-control-label'
        .col-sm-6{id: 'star-rating'}
      = f.input :title, placeholder: t('title_pl'), input_html: { class: 'form-control' }
      = f.input :description, placeholder: t('description_pl'), input_html: { class: 'form-control' }
      .text-right.marg-btn
        = f.button :submit, t('post'), class: "btn btn-primary mb-35"