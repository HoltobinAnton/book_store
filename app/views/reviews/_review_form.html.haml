%h3.in-gold-500.mb-25= t('Write your own review')
.col-sm-8
  = simple_form_for book.reviews.new, as: @review_form do |f|
    .form-group
      = f.hidden_field(:book_id, value: book.id)
      .form-group.row
        = f.label :rating, class: 'col-sm-1 form-control-label'
        .col-sm-6{id: 'star-rating'}
      = f.input :title, input_html: { class: 'form-control' }
      = f.input :description, input_html: { class: 'form-control' }
      .text-right
        = f.button :submit, 'Post', class: "btn btn-primary mb-35"