= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { class: "general-form" }) do |f|
  .form-group.mb-30
    %label.control-label.font-weight-light{for: "email"}= t('enter_email')
    = f.email_field :email, autofocus: true, placeholder: t('email'), id: "email", class: "form-control"
  .form-group.mb-30
    %label.control-label.font-weight-light{for: "password"}= t('enter_password')
    = f.password_field :password, autocomplete: "off", placeholder: t('password'), id: "password",class: "form-control"
    = link_to t('forgot_password'), new_password_path(resource_name), class: 'help-block in-gold-500'
  - if devise_mapping.rememberable?
    .form-group.checkbox.text-center.mb-30
      %label.font-weight-light.pl-0
        = f.check_box :remember_me, class: 'checkbox-input', hidden: true
        %span.checkbox-icon
          %i.fa.fa-check
        %span.checkbox-text= t('remember')
  .text-center
    = f.button t('sign_in'), class: "btn btn-default mb-20"