.row.mb-20
  = render partial: 'confirm_subtitle', locals: { value: 'shipping', address: user.addresses.second }
  = render partial: 'confirm_subtitle', locals: { value: 'billing', address: user.addresses.first }
  .col-sm-3
    %h3.general-subtitle= t('shipments')
    %p.general-address
      = order.delivery.name
      = link_to t('edit'), wizard_path(:delivery), class: "general-edit"
      %br
      = delivery_days(order.delivery)
  .col-sm-3
    %h3.general-subtitle= t('pay_info')
    %p.general-address
      = hide_credit_card(order.credit_card)
      = link_to t('edit'), wizard_path(:payment), class: "general-edit"
      %br
      = mount_year(order.credit_card)
