%p.in-grey-600.small.mb-10.visible-xs= t('sort_by')
.dropdown.general-order-dropdown.mb-20
  %a.dropdown-toggle.dropdown-btn.width-100{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
    %span.drop-down-newest-first= t("#{sort_title}")
    %i.fa.fa-angle-down.dropdown-icon
  %ul.dropdown-menu
    %li
      = link_to t("all"), user_path(sort_type: :all)
    %li
      = link_to t("waiting_for_processing"), user_path(sort_type: :by_waiting)
    %li
      = link_to t("in_delivering"), user_path(sort_type: :by_delivery)
    %li
      = link_to t("was_delivered"), user_path(sort_type: :by_delivered)
    %li
      = link_to t("canseled"), user_path(sort_type: :by_cancel)