= form_for check_address_first, controller: :user, method: :get,:url => { :action => "edit" } do |f|  
  .form-group
    %label.control-label.input-label{for: "firstName"}= t('first_name')
    = f.text_field :first_name, class: 'firstName form-control', name: 'fname_bil', type: 'text', placeholder: t('first_name')
  .form-group
    %label.control-label.input-label{for: "lastName"}= t('last_name')
    = f.text_field :last_name, class: 'lastName form-control', name: 'lname_bil', type: 'text', placeholder: t('last_name')
  .form-group
    %label.control-label.input-label{for: "address"}= t('address')
    = f.text_field :address, class: 'address form-control', name: 'address_bil', type: 'text', placeholder: t('address')
  .form-group
    %label.control-label.input-label{for: "city"}= t('city')
    = f.text_field :city, class: 'city form-control', name: 'city_bil', type: 'text', placeholder: t('city')
  .form-group
    %label.control-label.input-label{for: "zip"}= t('zip')
    = f.text_field :zip, class: 'zip form-control', name: 'zip_bil', type: 'text', placeholder: t('zip')
  .form-group
    %label.control-label.input-label{for: "—Åountry"}= t('country')
    = f.select(:country_id, countries_array, {}, class: 'form-control', placeholder: t("select_country"),name: 'country_bil')
  .form-group
    %label.control-label.input-label{for: "phone"}=t('phone')
    = f.text_field :phone, class: 'phone form-control', name: 'phone_bil', type: 'text', placeholder: t('phone_example')
  .text-center.general-text-align
    = f.submit t('save_address'), class: "btn btn-default mb-20"