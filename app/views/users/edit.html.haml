%main.container
  %h1.general-title-margin= t('settings')
  %ul.nav.clearfix.mb-20{role: "tablist", id: "nav-ul"}
    %li.tab-item.active{role: "presentation"}
      %a.tab-link{href: "#address", 'aria-controls': "address", role: "tab", 'data-toggle': "tab"}= t('address')
    %li.tab-item{role: "presentation"}
      %a.tab-link{href: "#privacy", 'aria-controls': "privacy", role: "tab", 'data-toggle': "tab"}= t('privacy')
  .tab-content
    #address.tab-pane.fade.in.active.general-main-wrap
      = render partial: 'address', locals: { user: @user }
    #privacy.tab-pane.fade{role: "tabpanel"}
      .row.mb-60
        = render partial: 'edit_email_pass', locals: { user: @user }
        .col-sm-12
          = render partial: 'remove_account', locals: { user: @user  }
          